<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <record id="bank_deposit_clearance_form" model="ir.ui.view">
			<field name="name">Bank Deposit Clearance Form</field>
			<field name="model">bank.deposit.clearance</field>
			<field name="arch" type="xml">
				<form string="Bank Deposit Clearance" duplicate="0">
					<header>
						 <field name="status" widget="statusbar" statusbar_visible="draft,deposit" invisible="1"/>
					</header>
					<sheet>
                        <group>
                            <group col="4">
                                <field name="society_id" options="{'no_open': True,'no_create':True}" domain="[('type','=','society')]" required="1" class="asterik" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="school_id" options="{'no_open': True,'no_create':True}" domain="[('type','=','school'),('parent_id','=',society_id)]"  required="1" class="asterik" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="academic_year_id" domain="[('school_id', '=', school_id)]" options="{'no_open': True,'no_create':True}" required="1" class="asterik" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="payment_mode" required="1" class="asterik" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="read_only" invisible="1"/>
                                <field name="confirm_on" invisible="1"/>
                            </group>
                        </group>
                        
                        <!--Cheque-->
                        <separator string="Cheque" attrs="{'invisible': [('payment_mode','not in',['cheque/dd'])],'required': [('payment_mode','in',['cheque/dd'])]}" class="asterik"/>
                        <!--DD-->
                        <separator string="Demand Draft (DD)" attrs="{'invisible': [('payment_mode','not in',['dd'])],'required': [('payment_mode','in',['dd'])]}" class="asterik"/>
                        <!--POS-->
                        <separator string="PoS" attrs="{'invisible': [('payment_mode','not in',['card'])],'required': [('payment_mode','in',['card'])]}" class="asterik"/>
                        <!--Neft/RTGS-->
                        <separator string="Neft/RTGS" attrs="{'invisible': [('payment_mode','not in',['neft/rtgs'])],'required': [('payment_mode','in',['neft/rtgs'])]}" class="asterik"/>
                        
                        <group>
                        <field name="line_ids" open="false" nolabel="1" attrs="{'invisible': [('payment_mode','=', False)]}">
                            <tree create="false" editable="bottom" delete="false" open="false">
                            	<field name="receipt_id" invisible="1" />
                                <field name="is_select" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="receipt_date" readonly="1"/>
                                <field name="name" string="Receipt No" readonly="1"/>
                                <field name="grade_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="enrollment_number" readonly="1"/>
                                <field name="student_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="cheque_dd" readonly="1" string="Ref No"/>
                                <field name="payment_mode" invisible="1"/>
                                <field name="total" readonly="1" string="Paid Amount"/>
                                <field name="attachment" filename="file_name" attrs="{'readonly':[('read_only','=',True)],'invisible': [('payment_mode','not in',['cheque/dd','dd'])],'required': [('payment_mode','in',['cheque/dd','dd']),('is_select','=',True)]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="state" readonly="1"/>
                                <field name="read_only" invisible="1"/>
                            </tree>
                            
                            <form>
                            	<field name="receipt_id" invisible="1" />
                                <field name="is_select" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="receipt_date" readonly="1"/>
                                <field name="name" string="Receipt No" readonly="1"/>
                                <field name="grade_id" readonly="1" options ="{'no_open': True,'no_create':True}"/>
                                <field name="enrollment_number" readonly="1"/>
                                <field name="student_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="cheque_dd" readonly="1" string="Ref No"/>
                                <field name="payment_mode" invisible="1"/>
                                <field name="total" readonly="1" string="Paid Amount"/>
                                <field name="state" readonly="1"/>
                                <field name="attachment" filename="file_name" attrs="{'readonly':[('read_only','=',True)],'invisible': [('payment_mode','not in',['cheque/dd','dd'])],'required': [('payment_mode','in',['cheque/dd','dd']),('is_select','=',True)]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="read_only" invisible="1"/>
                            </form>
                        </field>
                        </group>
                        <group>
                        <group>
	                        <field name="c_bank_id"  class="asterik" options="{'no_open': True,'no_create':True}" domain="[('school_ids', 'in', school_id)]" attrs="{'readonly':[('status','not in',['draft'])],'required':[('status','in',['draft'])]}"/>
	                        <field name="remarks" attrs="{'readonly':[('status','not in',['draft'])]}"/>
                        </group>
                        </group>
                        <footer>
							<div class="text-center">
								<button name="confirm" string="Confirm" attrs="{'invisible': ['|',('status','not in',['draft']),('payment_mode','=', False)]}"
								type="object" 
								class="oe_highlight" 
							    groups="pappaya_core.group_pappaya_national_level_officer,pappaya_core.group_pappaya_national_level_fin_admin,pappaya_core.group_pappaya_school_level_officer,pappaya_core.group_pappaya_school_level_fin_admin"/>
							</div>
						</footer>
                    </sheet>
				</form>
			</field>
		</record>

        <record id="bank_deposit_clearance_tree" model="ir.ui.view">
			<field name="name">Bank Deposit Clearance Tree</field>
			<field name="model">bank.deposit.clearance</field>
			<field name="arch" type="xml">
				<tree string="Bank Deposit Clearance" default_order='confirm_on desc,id desc'>
                    <field name="society_id"/>
				    <field name="school_id"/>
                    <field name="academic_year_id"/>
                    <field name="payment_mode"/>
                    <field name="status"/>
                    <field name="confirm_on" invisible="1"/>
                </tree>
			</field>
		</record>

        <record id="bank_deposit_clearance_search" model="ir.ui.view">
			<field name="name">Bank Deposit Clearance Search</field>
			<field name="model">bank.deposit.clearance</field>
            <field name="arch" type="xml">
                <search string="Bank Deposit Clearance">
                    <field name="society_id"/>
                    <field name="school_id"/>
                    <field name="academic_year_id"/>
                    <field name="payment_mode"/>
                    <field name="status"/>
                    <group expand="0" string="Group By...">
                        <filter string="Payment Mode" domain="[]" context="{'group_by':'payment_mode'}"/>
                        <filter string="Status" domain="[]" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bank_deposit_clearance">
            <field name="name">Fees Management > Non Cash Deposit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.deposit.clearance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="view_ids"
				eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('bank_deposit_clearance_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('bank_deposit_clearance_form')})]" />
        </record>

    </data>
</openerp>