<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Fees Concession Type Form -->
		<record id="pappaya_fees_concession_type_form" model="ir.ui.view">
			<field name="name">pappaya.fees.concession.type.form</field>
			<field name="model">pappaya.concession.type</field>
			<field name="arch" type="xml">
				<form string="Fees Concession Type" duplicate="0">
					<sheet>
						<group col="4" colspan="2">
							<field name="type"/>
							<newline/>
							<field name="concession_fixed" attrs="{'invisible':[('type','=',False)],'required':[('type','=',True)]}"/>
							<newline/>
							<field name="name" class="asterik" attrs="{'invisible':[('type','!=',False)],'required':[('type','!=',True)]}"/>
							<newline/>
							<field name="code" attrs="{'readonly':[('type','=',True)],'required':[('type','!=',True)]}" class="asterik"/>
							<field name="society_ids" widget="many2many_tags"  options="{'no_open': True,'no_create':True}" domain="[('type','=','society')]"/>
							<field name="school_ids"  widget="many2many_tags" options="{'no_open': True,'no_create':True}" domain="[('type','=','school')]" required="1" class="asterik"/>
							<field name="fees_head_ids"  widget="many2many_tags" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
						
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		
		<!-- Fees Concession Type Tree -->
		
		<record id="pappaya_fees_concession_type_tree" model="ir.ui.view">
			<field name="name">pappaya.fees.concession.type.tree</field>
			<field name="model">pappaya.concession.type</field>
			<field name="arch" type="xml">
				<tree string="Fees Term">
					<field name="society_ids" />
					<field name="school_ids"/>
					<field name="code"/>
					<field name="name" />
					<field name="type"/>
					<field name="concession_fixed"/>
					<field name="fees_head_ids"/>
				</tree>
			</field>
		</record>
		
		
		<record model="ir.actions.act_window" id="action_pappaya_fees_concession_type_id">
			<field name="name"> Fees Management > Configuration > Fees Concession Type</field>
			<field name="res_model">pappaya.concession.type</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		
		
	</data>
</odoo>
