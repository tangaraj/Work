<?xml version="1.0"?>
<openerp>
    <data>

		<record  id="view_bank_ledger_wizard_form" model="ir.ui.view">
			<field name="name">Cash Book Form</field>
			<field name="model">bank.ledger.wizard</field>
			<field name="arch" type="xml">
				<form string="Cash Book">
					 <group col="4" colspan="4" >
                         <field name="society_id" domain="[('type','=','society')]" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                         <field name="school_id" domain="[('type','=','school'),('parent_id','=',society_id)]" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                         <field name="academic_year_id" domain="[('school_id','in', school_id)]" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                         <field name="bank_account_id" domain="[('society_id','=', society_id),('school_ids','in', school_id)]" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                         <field name="from_date" required="1" class="asterik"/>
                         <field name="to_date" required="1" class="asterik"/>
                     </group>
					 <footer>
						 <button name="generate_excel_report" type="object" string="Excel" class="oe_highlight"/>
						 <button string="Cancel" special="cancel" />
					</footer>
			 	</form>
			</field>
		</record>

		<record  id="action_bank_ledger_wizard" model="ir.actions.act_window">
            <field name="name">Cash Book</field>
            <field name="res_model">bank.ledger.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_bank_ledger_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
