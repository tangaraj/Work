<?xml version="1.0"?>
<openerp>
    <data>

		<record  id="view_bank_ledger_all_form" model="ir.ui.view">
			<field name="name">Bank Ledger Form</field>
			<field name="model">bank.ledger.all</field>
			<field name="arch" type="xml">
				<form string="Bank Ledger All">
						<group col="4" colspan="4">
							<field name="society_ids" widget="many2many_tags"  options="{'no_open': True,'no_create':True}" domain="[('type','=','society')]" />
							<field name="academic_year_id" options="{'no_open': True,'no_create':True}" />
							<field name="bank_account_id" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
							<field name="payment_mode" required="1" class="asterik"/>
							<field name="from_date" required="1" class="asterik"/>
							<field name="to_date" required="1" class="asterik"/>
							<field name="school_ids" invisible="1" widget="many2many_tags" options="{'no_open': True,'no_create':True}" domain="[('type','=','school'),('parent_id','in', society_ids)]" />
						</group>
					<footer>
						<button name="bank_ledger_all_detail_excel_report" type="object" string="Excel" class="oe_highlight" />
						<button string="Cancel" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record  id="action_bank_ledger_all" model="ir.actions.act_window">
            <field name="name">Bank Ledger</field>
            <field name="res_model">bank.ledger.all</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_bank_ledger_all_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
